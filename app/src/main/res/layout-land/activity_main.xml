<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextClock
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/clock"
        app:layout_constraintEnd_toStartOf="@+id/clock"
        app:layout_constraintTop_toTopOf="@+id/clock" />

    <com.example.menu.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/clock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cerchio SINISTRA (Wedges 7-12) -->
    <com.example.menu.WedgeImageView android:id="@+id/wedge_7" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_v" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_8" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_v" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_9" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_v" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_10" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_v" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_11" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_v" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_12" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline_v" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Cerchio DESTRA (Wedges 1-6) -->
    <com.example.menu.WedgeImageView android:id="@+id/wedge_1" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/guideline_v" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_2" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/guideline_v" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_3" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/guideline_v" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_4" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/guideline_v" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_5" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/guideline_v" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />
    <com.example.menu.WedgeImageView android:id="@+id/wedge_6" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintWidth_percent="0.4" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toEndOf="@+id/guideline_v" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />

    <View android:id="@+id/center_helper" android:layout_width="1dp" android:layout_height="1dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>